<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j">
<log4j:configuration debug="true">

    <appender name="MAINLOG" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%-5p %d{HH:mm:ss,SSS} %t (%-c) [%x] - %m%n"/>
        </layout>
    </appender>


    <root>
        <priority value="info"/>
        <appender-ref ref="MAINLOG"/>
    </root>

</log4j:configuration>